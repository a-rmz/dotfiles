# File listing
alias ls='exa -FG'
alias ll='exa -lF'
alias la='exa -a'
alias lla='exa -la'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Xclip
alias cb='pbcopy'

#Vim-style exit
alias :q='exit'

# Vim
# + NERDTree
alias v='vim'
alias vnt='vim "+NERDTree"'

# Docker
alias drmiall='docker rmi $(sudo docker images -q)'
alias drmiau='docker rmi -f $(docker images | grep "^<none>" | awk "{print $3}")'
alias dc='docker-compose'
alias dcb='docker-compose build'
alias dcu='docker-compose up'
alias dcs='docker-compose stop'
alias dcsr='docker-compose stop && docker-compose rm -f'

# Git + hub
alias git='hub'
# ====
alias dv='g co develop'
alias g='hub'
alias gap='g add -p'
alias gbD='g b -D'
alias gca='g commit --amend --no-edit'
alias gcm='g commit -m'
alias gds='gd --staged'
alias gpfn='g ps --force-with-lease --no-verify'
alias gpsu='g psu'
alias gpnu='g pnu'
alias grc='g rebase --continue'
alias grd='g rebase develop'
alias grid='g rebase -i develop'
alias grm='g rebase master'
alias grim='g rebase -i master'
alias gs='g status'
alias gsn='g sync'

# Zsh
alias aliases='$EDITOR ~/.zsh_aliases'
alias zshconf='$EDITOR ~/.zshrc'
alias path='echo -e ${PATH//:/\\n}'

# Tmuxinator
alias m='tmuxinator'

# Kubernetes
alias k='kubectl'

# Python
alias server='python -m http.server 8080'
alias shell='python manage.py shell'
alias pym='python manage.py '

# Other stuff
alias ws='webstorm'
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias prv=preview

alias vshell="pod_name=$(kubectl -n berth-reservations-qa get po | egrep berth-reservations-staging.+Running | head -1 | awk '{print $1;}');echo pod:$pod_name;kubectl -n berth-reservations-qa exec -it $pod_name -- bash"
