# File listing
alias ls='exa -FG'
alias ll='exa -lF'
alias la='exa -a'
alias lla='exa -la'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Xclip
alias cb='pbcopy'

#Vim-style exit
alias :q='exit'

# Vim
# + NERDTree
alias v='vim'
alias vnt='vim "+NERDTree"'

# Docker
alias drmiall='docker rmi $(sudo docker images -q)'
alias drmiau='docker rmi -f $(docker images | grep "^<none>" | awk "{print $3}")'
alias dc='docker-compose'
alias dcb='docker-compose build'
alias dcu='docker-compose up'
alias dcsr='docker-compose stop && docker-compose rm -f'

# Git + hub
alias git='hub'
alias g='hub'
alias gca='g commit --amend'
alias gs='g status'
alias gap='g add -p'
alias gbD='g b -D'
alias gds='gd --staged'
alias gcm='g commit -m'

# Zsh
alias aliases='$EDITOR ~/.zsh_aliases'
alias zshconf='$EDITOR ~/.zshrc'
alias path='echo -e ${PATH//:/\\n}'

# Kubernetes
alias k='kubectl'

alias server='python -m http.server 8080'
alias ws='webstorm'
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias prv=preview
